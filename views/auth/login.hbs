<div id="loginbackground">
  <div id="loginpagecont">
    <h3>LOGIN</h3>

    <form action="/auth/login" method="POST" id="form-container">
      <label for="email">Email</label>
      <input id="email" type="text" name="email" placeholder="Your email" class="input">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password" class="input">
      <br>
      {{#if message }}
        <div class="error-message">{{ message }}</div>
      {{/if}}

      <br><br>

      <button class="btnsubmit">Login</button>

      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>
  </div>
</div>